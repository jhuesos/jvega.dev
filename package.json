{
  "name": "jvega.dev",
  "version": "0.0.0",
  "description": "jvega.dev website",
  "main": "src/index.js",
  "repository": "https://github.com/jhuesos/jvega.dev",
  "author": "Jaime Vega",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "webpack --config webpack.config.prod.js",
    "start": "webpack-dev-server --mode development --config webpack.config.dev.js",
    "commit": "commit",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint --ext .js .",
    "lint:prettier": "prettier \"**/*.js\" --list-different || (echo '↑↑ these files are not prettier formatted ↑↑' && exit 1)",
    "format": "run-s lint:*",
    "format:eslint": "eslint --ext .js . --fix",
    "format:prettier": "prettier \"**/*.js\" --write",
    "analyze-build-bundle": "webpack --config webpack.config.prod.js --profile --json > .tmp/stats.json && webpack-bundle-analyzer .tmp/stats.json"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/prompt-cli": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^5.0.4",
    "dotenv": "^8.0.0",
    "eslint": "^6.1.0",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.14.3",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.0.2",
    "lint-staged": "^9.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "webpack": "^4.39.1",
    "webpack-bundle-analyzer": "^3.4.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  }
}
